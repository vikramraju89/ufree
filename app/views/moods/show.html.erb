<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Mood #<%= @mood.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Mood name</dt>
              <dd><%= @mood.mood_name %></dd>

              <dt>Mood description</dt>
              <dd><%= @mood.description %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/moods" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/moods/<%= @mood.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_mood/<%= @mood.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
       <li class="list-group-item list-group-item-success">
          Here are the events that are catering to this mood!
        </li>
      <ul class="list-group">
        <% @mood.activities.each do |activity| %>
        <a href="/activities/<%= activity.id %>">
        <li class ="list-group-item"><%= activity.title %></li>
        </a>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
