<!-- Validation failure messages -->

<% if @mood.errors.any? %>
  <% @mood.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Mood</h3>
      </div>
      <div class="panel-body">
        <form action="/create_mood" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for mood_name -->
          <div class="form-group">
            <label for="mood_name" class="col-sm-2 control-label">
              Mood name
            </label>
            <div class="col-sm-10">
              <input type="string" id="mood_name" name="mood_name" placeholder="Mood name" class="form-control" value="<%= @mood.mood_name %>">
            </div>
          </div>

          <!-- Label and input for description -->
          <div class="form-group">
            <label for="description" class="col-sm-2 control-label">
              Mood Description
            </label>
            <div class="col-sm-10">
              <input type="text" id="description" name="description" placeholder="What is this mood all about?" class="form-control" value="<%= @mood.description %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Mood
              </button>
              or
              <a href="/moods">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
