<!-- Validation failure messages -->

<% if @registration.errors.any? %>
  <% @registration.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Join this event!</h3>
      </div>
      <div class="panel-body">
        <form action="/create_registration" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



          <!-- Label and input for activity_id -->
          <div class="form-group">
            <label for="activity_id" class="col-sm-2 control-label">
            </label>
              Are you sure you want to join <%= Activity.find(params[:id]).title %>?

            <div class="col-sm-10">
              <input type="hidden" id="activity_id" name="activity_id" placeholder="Activity" class="form-control" value=<%= params[:id] %>>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Join!
              </button>
              or
              <a href="/registrations">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
